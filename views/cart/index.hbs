{{#extends 'base'}}

{{#block "content"}}
<h1>Your Shopping Cart <a class="btn btn-success" href="/checkout/">Checkout</a></h1>
<ul class="list-group">

{{#each cartItems}}
    <li class="list-group-item">
        <h5>{{this.sneaker.name}}</h5>
        <ul>
            <li>Price: {{this.sneaker.price}}</li>
            <li>Description: {{this.sneaker.name}}</li>
        </ul>
        <form method="POST" action="/cart/{{this.sneaker.id}}/update" class="mt-2">
            <h6>Quantity: <input type="text" style="width:2em" name="newQuantity" value="{{this.quantity}}"
                </h6>
            <input type="hidden" name="_csrf" value="{{../csrfToken}}"/>
            <input type="submit" value="Change Quantity" class="btn btn-primary btn-sm"/>
        </form>
        <form method="POST" action="/cart/{{this.sneaker.id}}/remove" class="mt-2">
            <input type="hidden" name="_csrf" value="{{../csrfToken}}"/>
            <input type="submit" value="Remove Item" class="btn btn-danger btn-sm"/>
        </form>
    </li>
{{/each}}


</ul>

{{/block}}

{{/extends}}