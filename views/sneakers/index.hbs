{{#extends 'base'}}

{{#block "content"}}
<a href="/sneakers/create" class="btn btn-primary btn-sm mt-3">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Cut</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each sneakers}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.price}}
            </td>
            <td>
                {{this.cutType.name}}
            </td>
            <td>
                {{#if this.image_url}}
                    <img src="{{this.image_url}}" class="img-fluid" width="100" height="100"/>
                {{/if}}
            </td>
            <td>
                <a href="/sneakers/{{this.id}}/update" 
                    class="btn btn-primary btn-sm">Edit</a>
                <a href="/sneakers/{{this.id}}/delete"
                    class="btn btn-danger btn-sm">Delete</a>
            </td>
        {{/each}}
        </tr>
    </tbody>
</table>
{{/block}}

{{/extends}}